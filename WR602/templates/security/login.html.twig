{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block body %}
    <div style="clear: both; display: flex; justify-content: center; margin-top: 50px;">
        <form method="post" style="border: 2px solid black; padding: 20px; width: 300px; background-color: #f8f9fa;">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;">Connectez-vous</h1>
            <br>
            <label for="username">Email</label>
            <br>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <br>
            <br>
            <label for="password">Mot de passe</label>
            <br>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
                <br>
                <br>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit" style="background-color: blue; border: none;">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}