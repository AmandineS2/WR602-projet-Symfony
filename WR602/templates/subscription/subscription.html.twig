{% extends 'base.html.twig' %}
{% block title %}Abonnement{% endblock %}

{% block body %} 
    <header style="border: 2px solid black; padding: 10px; text-align: center;">
        <h1 style="clear: both;">Mon abonnement</h1>
    </header>  

    <section style="margin: 20px; text-align: center;">
        <h2>Vos avantages</h2>
    {% if currentSubscription == 'free' %}
    <div style="display: flex; justify-content: space-around;">
        <section style="margin: 20px; border: 2px solid rgb(252, 252, 254); background-color:#fafafa; padding: 10px; text-align: center; flex: 1; border-radius: 20px;">
            <h2>Abonnement FREE</h2>
            <h3>0€/mois</h3>
            <br>
            <ul style="text-align: left">
                <li style="margin-inline: 10px;">Génération illimitée de PDF</li>
                <br>
                <li style="margin-inline: 10px;">Accès à une bibliothèque de modèles de PDF</li>
                <br>
                <li style="margin-inline: 10px;">Option pour personnaliser les PDF générés</li>
                <br>
                <li style="margin-inline: 10px;">Téléchargement de 4 PDF par jours</li>
            </ul>
        </section>
        {% elseif currentSubscription == 'pro' %}
        <section style="margin: 20px; border: 2px solid rgb(252, 252, 254); background-color:#fafafa; padding: 10px; text-align: center; flex: 1; border-radius: 20px;">
            <h2>Abonnement PRO</h2>
            <h3>8€/mois</h3>
            <ul style="text-align: left">
                <li style="margin-inline: 10px;">Protection des fichiers par mot de passe</li>
                <br>
                <li style="margin-inline: 8px;">Conversion de documents numérisés en fichier PDF</li>
                <br>
                <li style="margin-inline: 10px;">Support client prioritaire</li>
                <br>
                <li style="margin-inline: 10px;">Application de Bureau</li>
                <br>
                <li style="margin-inline: 10px;">Pas de publicité</li>
                <br>
                <li style="margin-inline: 10px;">Ajout d'utilisateurs illimités</li>
                <br>
                <li style="margin-inline: 10px;">Téléchargement de 8 PDF par jours</li>
            </ul>
        </section>
        {% elseif currentSubscription == 'business' %}
        <section style="margin: 20px; border: 2px solid rgb(252, 252, 254); background-color:#fafafa; padding: 10px; text-align: center; flex: 1; border-radius: 20px;">
            <h2>Abonnement BUSINESS</h2>
            <h3>15€/mois</h3>
            <br>
            <ul style="text-align: left">
                <li style="margin-inline: 10px;">Ajout et gestion des utilisateurs illimité</li>
                <br>
                <li style="margin-inline: 10px;">Support technique prioritaire</li>
                <br>
                <li style="margin-inline: 10px;">Facturation sur mesure</li>
                <br>
                <li style="margin-inline: 10px;">Programme de formation pour les nouveaux utilisateurs</li>
                <br>
                <li style="margin-inline: 10px;">Paiements flexibles</li>
                <br>
                <li style="margin-inline: 10px;">Contrats personnalisé</li>
                <br>
                <li style="margin-inline: 10px;">Téléchargement de 100 PDF par jours</li>
            </ul>
        </section>
        {% endif %}
    </div>
{% endblock %}
